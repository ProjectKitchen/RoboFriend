<?xml version="1.0"?>
<launch>
	<!-- Global Arguments -->
	<arg name="lidar" default="true"/>
	<arg name="slam" default="false"/>
	
	<!-- Arguments: LIDAR -->
	<arg name="port" default="/dev/ttyUSB0" />
	<arg name="frame_id" default="laser" />	

	<!-- Arguments: SLAM -->
	<arg name="slam_methods" default="gmapping"/>

	<!-- Drivers: LIDAR -->
  	<group if="$(arg lidar)"> 
		<include file="$(find hls_lfcd_lds_driver)/launch/hlds_laser.launch" />
	</group>

	<!-- Drivers: SLAM -->
	<group if="$(arg slam)"> 
	  	<include file="$(find turtlebot3_slam)/launch/turtlebot3_$(arg slam_methods).launch" />
	</group>

	<node pkg="robofriend" type="RobobrainNode.py" name="robofriend_robobrain" output="screen">
	</node>

	<node pkg="robofriend" type="GameCommunicatorNode.py" name="robofriend_game_communicator" output="screen">
	</node>

	<node pkg="robofriend" type="RFIDNode.py" name="robofriend_rfid_handler" output="screen">
	</node>

	<node pkg="robofriend" type="PCBSensorData.py" name="robofriend_pcb_sensor_data" output="screen">
	</node>

	<node pkg="robofriend" type="TeensyNode.py" name="robofriend_teensy_communicator" output="screen">
	</node>
</launch>
